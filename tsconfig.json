{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "src/",
    "allowJs": true,
    "lib" : [
      "es6"
    ],
    "types" : [
      "node"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
